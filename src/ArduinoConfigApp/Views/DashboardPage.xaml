<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="ArduinoConfigApp.Views.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Loaded="Page_Loaded"
    Unloaded="Page_Unloaded">

    <Grid Padding="24" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock
                Text="Dashboard"
                Style="{StaticResource TitleTextBlockStyle}"
                Margin="0,0,0,8"/>
            <TextBlock
                x:Name="ConfigNameText"
                Text="No configuration loaded"
                Style="{StaticResource BodyTextBlockStyle}"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
        </StackPanel>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="24">
                <!-- Status Cards -->
                <StackPanel Orientation="Horizontal" Spacing="16">
                    <!-- Connection Status Card -->
                    <Border
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20"
                        MinWidth="250">
                        <StackPanel Spacing="12">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon x:Name="StatusIcon" Glyph="&#xE839;" Foreground="{ThemeResource SystemFillColorCautionBrush}"/>
                                <TextBlock Text="Connection Status" Style="{StaticResource SubtitleTextBlockStyle}"/>
                            </StackPanel>
                            <TextBlock
                                x:Name="ConnectionStatusText"
                                Text="Scanning for boards..."
                                Style="{StaticResource BodyTextBlockStyle}"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                    </Border>

                    <!-- Board Info Card -->
                    <Border
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20"
                        MinWidth="250">
                        <StackPanel Spacing="12">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE950;"/>
                                <TextBlock Text="Board Type" Style="{StaticResource SubtitleTextBlockStyle}"/>
                            </StackPanel>
                            <TextBlock
                                x:Name="BoardTypeText"
                                Text="--"
                                Style="{StaticResource BodyTextBlockStyle}"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                    </Border>

                    <!-- COM Port Card -->
                    <Border
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20"
                        MinWidth="250">
                        <StackPanel Spacing="12">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE968;"/>
                                <TextBlock Text="COM Port" Style="{StaticResource SubtitleTextBlockStyle}"/>
                            </StackPanel>
                            <TextBlock
                                x:Name="ComPortText"
                                Text="--"
                                Style="{StaticResource BodyTextBlockStyle}"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Detected Boards List -->
                <StackPanel>
                    <Grid Margin="0,0,0,12">
                        <TextBlock Text="Detected Boards" Style="{StaticResource SubtitleTextBlockStyle}"/>
                        <Button HorizontalAlignment="Right" Click="RefreshButton_Click" Padding="8,4">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <FontIcon Glyph="&#xE72C;" FontSize="14"/>
                                <TextBlock Text="Refresh"/>
                            </StackPanel>
                        </Button>
                    </Grid>

                    <ListView
                        x:Name="BoardsListView"
                        SelectionMode="Single"
                        SelectionChanged="BoardsListView_SelectionChanged"
                        MaxHeight="150">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="8" ColumnSpacing="16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <FontIcon Grid.Column="0" Glyph="&#xE950;" VerticalAlignment="Center"/>

                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding BoardTypeName}" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding Description}"
                                                   Style="{StaticResource CaptionTextBlockStyle}"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    </StackPanel>

                                    <TextBlock Grid.Column="2" Text="{Binding PortName}"
                                               VerticalAlignment="Center"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>

                                    <Border Grid.Column="3"
                                            CornerRadius="4"
                                            Padding="8,4"
                                            VerticalAlignment="Center"
                                            Background="{ThemeResource SubtleFillColorSecondaryBrush}">
                                        <TextBlock Text="{Binding StatusText}"
                                                   Style="{StaticResource CaptionTextBlockStyle}"/>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <TextBlock x:Name="NoBoardsText"
                               Text="No Arduino boards detected. Connect a board via USB."
                               Style="{StaticResource BodyTextBlockStyle}"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               Margin="0,12,0,0"
                               Visibility="Collapsed"/>
                </StackPanel>

                <!-- Configuration Actions -->
                <StackPanel Spacing="16">
                    <TextBlock Text="Configuration" Style="{StaticResource SubtitleTextBlockStyle}"/>
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <Button Style="{StaticResource AccentButtonStyle}" Click="NewConfigButton_Click">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE710;" FontSize="16"/>
                                <TextBlock Text="New Configuration"/>
                            </StackPanel>
                        </Button>
                        <Button Click="OpenConfigButton_Click">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE8E5;" FontSize="16"/>
                                <TextBlock Text="Open Configuration"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="SaveConfigButton" Click="SaveConfigButton_Click" IsEnabled="False">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE74E;" FontSize="16"/>
                                <TextBlock Text="Save"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="SaveAsConfigButton" Click="SaveAsConfigButton_Click">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE792;" FontSize="16"/>
                                <TextBlock Text="Save As..."/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>

                <!-- Recent Configurations -->
                <StackPanel x:Name="RecentConfigsPanel" Spacing="12">
                    <TextBlock Text="Recent Configurations" Style="{StaticResource SubtitleTextBlockStyle}"/>
                    <ListView
                        x:Name="RecentConfigsListView"
                        SelectionMode="Single"
                        IsItemClickEnabled="True"
                        ItemClick="RecentConfigsListView_ItemClick"
                        MaxHeight="200">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="8" ColumnSpacing="12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <FontIcon Grid.Column="0" Glyph="&#xE8A5;" VerticalAlignment="Center"/>

                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding Path}"
                                                   Style="{StaticResource CaptionTextBlockStyle}"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                   TextTrimming="CharacterEllipsis"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <TextBlock x:Name="NoRecentConfigsText"
                               Text="No recent configurations"
                               Style="{StaticResource BodyTextBlockStyle}"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               Visibility="Collapsed"/>
                </StackPanel>

                <!-- Auto-save Toggle -->
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <ToggleSwitch
                        x:Name="AutoSaveToggle"
                        Header="Auto-save"
                        Toggled="AutoSaveToggle_Toggled"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
